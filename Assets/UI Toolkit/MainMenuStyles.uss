.main-container {
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.player-name-container {
    position: absolute;
    bottom: 20px;
    left: 20px;
    flex-direction: row;
    align-items: center;
    background-color: rgba(52, 73, 94, 0.9);
    border-radius: 10px;
    padding: 10px 15px;
    border-width: 2px;
    border-color: rgba(255, 152, 0, 0.5);
}

.player-name-label {
    font-size: 18px;
    color: rgb(255, 152, 0);
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
    margin-right: 10px;
}

.player-name-field {
    width: 180px;
    height: 35px;
    font-size: 16px;
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
    border-radius: 5px;
    border-width: 1px;
    border-color: rgba(255, 152, 0, 0.3);
}

.player-name-field > .unity-text-field__input {
    background-color: rgba(30, 40, 50, 0.9);
    color: white;
    font-size: 16px;
    padding: 8px;
    border-radius: 5px;
    min-height: 35px;
    -unity-text-align: middle-left;
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
}

.player-name-field:focus {
    border-color: rgb(255, 152, 0);
}

.title-container {
    justify-content: center;
    align-items: center;
    margin-bottom: 80px;
}

.game-title {
    font-size: 96px;
    color: rgb(255, 152, 0);
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
    -unity-font-style: bold;
    text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.8);
    letter-spacing: 2px;
}

.menu-container {
    justify-content: center;
    align-items: center;
    flex-direction: column;
    min-width: 300px;
}

.menu-button {
    width: 280px;
    height: 60px;
    margin: 12px;
    border-radius: 15px;
    border-width: 0;
    font-size: 32px;
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
    -unity-font-style: bold;
    transition-property: background-color, scale;
    transition-duration: 0.2s;
    scale: 1;
}

.primary-button {
    background-color: rgb(76, 175, 80);
    color: white;
}

.primary-button:hover {
    background-color: rgb(102, 187, 106);
    scale: 1.05;
}

.primary-button:active {
    background-color: rgb(56, 142, 60);
    scale: 0.98;
}

.secondary-button {
    background-color: rgb(52, 73, 94);
    color: white;
}

.secondary-button:hover {
    background-color: rgb(69, 90, 120);
    scale: 1.03;
}

.secondary-button:active {
    background-color: rgb(44, 62, 80);
    scale: 0.98;
}

.settings-panel {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    justify-content: center;
    align-items: center;
}

.settings-container {
    background-color: rgb(52, 73, 94);
    border-radius: 20px;
    border-width: 3px;
    border-color: rgb(255, 152, 0);
    width: 600px;
    max-height: 70%;
    padding: 30px;
}

.settings-header {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.settings-title {
    font-size: 48px;
    color: rgb(255, 152, 0);
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
    -unity-font-style: bold;
}

.close-button {
    width: 40px;
    height: 40px;
    background-color: rgb(231, 76, 60);
    color: white;
    border-radius: 20px;
    border-width: 0;
    font-size: 24px;
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
    transition-duration: 0.2s;
}

.close-button:hover {
    background-color: rgb(192, 57, 43);
    scale: 1.1;
}

.settings-content {
    background-color: transparent;
}

.settings-section {
    margin-bottom: 30px;
}

.section-title {
    font-size: 24px;
    color: rgb(255, 152, 0);
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
    -unity-font-style: bold;
    margin-bottom: 15px;
}

.setting-row {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
    min-height: 30px;
}

.setting-label {
    font-size: 18px;
    color: white;
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
    width: 180px;
}

.setting-slider {
    width: 200px;
    height: 20px;
}

.setting-dropdown {
    width: 150px;
    height: 30px;
    background-color: rgb(44, 62, 80);
    border-radius: 5px;
    color: white;
    font-size: 16px;
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
}

.setting-toggle {
    width: 50px;
}

.setting-value {
    font-size: 16px;
    color: rgb(255, 152, 0);
    -unity-font-definition: url("project://database/Assets/Fonts/Fredoka-VariableFont_wdth,wght.ttf?fileID=12800000&guid=ac38ddf4dc5ab7444bf07642e75c0c16&type=3#Fredoka-VariableFont_wdth,wght");
    width: 60px;
    -unity-text-align: middle-center;
}